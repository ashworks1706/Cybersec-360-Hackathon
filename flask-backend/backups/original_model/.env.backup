# Environment configuration for PhishGuard 360
# Copy this to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# API Keys
GEMINI_API_KEY=AIzaSyBwnVTtQAEBTY2oejAEWOzCfO9zJmwpWhY
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SPAMHAUS_API_KEY=your-spamhaus-api-key

# Database
DATABASE_URL=sqlite:///phishguard.db
RAG_DB_PATH=database/rag_database.db

# Model Configuration
MODEL_NAME=cybersectony/phishing-email-detection-distilbert_v2.1
CONFIDENCE_THRESHOLD=0.5

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Features
LAYER1_ENABLED=true
LAYER2_ENABLED=true
LAYER3_ENABLED=true

# Monitoring
CONVERSATION_TIMEOUT_HOURS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/phishguard.log