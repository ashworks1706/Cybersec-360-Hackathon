# Environment configuration for PhishGuard 360
# Copy this to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SPAMHAUS_API_KEY=your-spamhaus-api-key

# Database
DATABASE_URL=sqlite:///phishguard.db
RAG_DB_PATH=database/rag_database.db

# Model Configuration
MODEL_NAME=cybersectony/phishing-email-detection-distilbert_v2.1
CONFIDENCE_THRESHOLD=0.5

# Custom Fine-tuned Model Configuration
# Set USE_CUSTOM_MODEL=true to use the fine-tuned model instead of HuggingFace
USE_CUSTOM_MODEL=false
CUSTOM_MODEL_PATH=./models/phishguard-distilbert
CUSTOM_MODEL_NAME=phishguard-distilbert-v1.0
CUSTOM_MODEL_CONFIDENCE_THRESHOLD=0.7
CUSTOM_MODEL_HIGH_CONFIDENCE_THRESHOLD=0.85
MODEL_VERSION=v1.0-finetuned

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Features
LAYER1_ENABLED=true
LAYER2_ENABLED=true
LAYER3_ENABLED=true

# Monitoring
CONVERSATION_TIMEOUT_HOURS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/phishguard.log