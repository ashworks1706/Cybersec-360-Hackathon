{
  "manifest_version": 3,
  "name": "PhishGuard 360",
  "version": "1.0.0",
  "description": "Advanced email phishing detection with multi-layer AI security analysis",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*",
    "https://gmail.com/*",
    "http://localhost:5000/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://gmail.com/*"
      ],
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "PhishGuard 360 - Email Security Scanner"
  },
  
  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar/sidebar.html",
        "sidebar/sidebar.css",
        "sidebar/sidebar.js",
        "assets/*"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://gmail.com/*"
      ]
    }
  ],
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}