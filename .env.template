# PhishGuard 360 - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Flask Application Settings
# ============================================
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# ============================================
# API Keys (Required)
# ============================================
# Google Gemini API Key for Layer 3 Detective
GEMINI_API_KEY=your-gemini-api-key-here

# Hugging Face API Key for DistilBERT model
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:///database/data/phishguard.db

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO

# ============================================
# Security Settings
# ============================================
API_RATE_LIMIT=100
CORS_ORIGINS=https://mail.google.com,https://gmail.com

# ============================================
# AI Model Configuration
# ============================================
# DistilBERT model settings
DISTILBERT_MODEL=distilbert-base-uncased
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=16

# Gemini model settings
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.1

# ============================================
# Cache Configuration
# ============================================
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# ============================================
# File Upload Settings
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,html,eml

# ============================================
# Monitoring Settings
# ============================================
ENABLE_METRICS=true
METRICS_PORT=5001

# ============================================
# SSL/TLS Configuration (for production)
# ============================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# Development Settings (dev environment only)
# ============================================
# FLASK_ENV=development
# FLASK_DEBUG=1
# LOG_LEVEL=DEBUG
# API_RATE_LIMIT=1000